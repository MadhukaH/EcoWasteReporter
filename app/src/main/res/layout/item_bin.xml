<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="6dp"
    android:backgroundTint="#F7FBF7"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/textBinName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bin Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressFill"
            android:layout_width="320dp"
            android:layout_height="320dp"
            app:indicatorSize="36dp"
            app:trackThickness="36dp"
            app:indicatorInset="8dp"
            app:indicatorDirectionCircular="clockwise"
            app:trackColor="#E0E0E0"
            app:indicatorColor="#F44336"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textFillPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90%"
            android:textSize="48sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="-256dp"
            android:layout_marginBottom="232dp"
            android:textColor="#222"/>

        <TextView
            android:id="@+id/textBinLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bin Level: 90%"
            android:textSize="16sp"
            android:textColor="#666"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requested"
            android:textSize="13sp"
            android:textStyle="bold"
            android:background="@drawable/status_requested_bg"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textColor="#1976D2"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView> 