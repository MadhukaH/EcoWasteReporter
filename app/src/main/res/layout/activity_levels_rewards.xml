<?xml version="1.0" encoding="utf-8"?>
<!-- Levels and rewards screen layout with level info, XP progress, and rewards list -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:navigationIconTint="#1B1B1B">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/levels_and_rewards"
                android:textColor="#1B1B1B"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>

        </androidx.appcompat.widget.Toolbar>

        <!-- Removed TabLayout: page now focuses on Levels only -->
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="16dp"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Level Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/levelInfoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/levelIcon"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:padding="8dp"
                            android:src="@drawable/coin"
                            android:background="@drawable/circle_background"
                            app:tint="@null"
                            app:shapeAppearanceOverlay="@style/CircleImageView" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:id="@+id/levelTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Level 3"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="#1B1B1B"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/eco_warrior"
                                android:textSize="16sp"
                                android:textColor="#757575"
                                android:fontFamily="sans-serif-medium" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/progress_to_next_level"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1B1B1B"
                        android:layout_marginTop="32dp"
                        android:fontFamily="sans-serif-medium" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/levelProgress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:trackCornerRadius="8dp"
                        app:trackThickness="12dp"
                        app:indicatorColor="@color/green_500"
                        app:trackColor="#E0E0E0" />

                    <!-- Next Level and Points to Next Level -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/nextLevelLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Next Level: Eco Master"
                            android:textColor="#1B1B1B"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/pointsToNextLevelLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  |  550 points needed"
                            android:textColor="#757575"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/currentXp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2450 XP"
                            android:textColor="#757575"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/xpToNext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="550 XP needed"
                            android:textColor="@color/green_500"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Level Progression Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/eco_level_progression_background"
                android:padding="24dp"
                android:layout_marginBottom="24dp"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/level_progression_title"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#1B1B1B"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/levelsCountLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6 Levels"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:background="@drawable/level_count_badge"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/levelProgressionRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingHorizontal="8dp" />

            </LinearLayout>

            <!-- Stats: total points only (simplified) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:padding="6dp"
                        android:src="@drawable/coin"
                        android:background="@drawable/circle_background"
                        app:tint="@null"
                        app:shapeAppearanceOverlay="@style/CircleImageView" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/totalPoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15,680"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/green_500"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_points"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Mobile Reload Rewards -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Reload Rewards"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1B1B1B"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-medium" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/redeem100Btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="100 pts → Rs.100 reload"
                        android:textAllCaps="false"
                        android:layout_marginBottom="12dp"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/ic_refresh"
                        app:iconTint="@color/white"
                        app:iconPadding="12dp"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/redeem200Btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="200 pts → Rs.150 reload"
                        android:textAllCaps="false"
                        android:layout_marginBottom="12dp"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/ic_refresh"
                        app:iconTint="@color/white"
                        app:iconPadding="12dp"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/redeem300Btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="300 pts → Rs.200 reload"
                        android:textAllCaps="false"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/ic_refresh"
                        app:iconTint="@color/white"
                        app:iconPadding="12dp"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button"
                        />

                    <!-- Mid-tier redemptions -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/redeem400Btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="400 pts → Rs.250 reload"
                        android:textAllCaps="false"
                        android:layout_marginTop="12dp"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/ic_refresh"
                        app:iconTint="@color/white"
                        app:iconPadding="12dp"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/redeem500Btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="500 pts → Rs.300 reload"
                        android:textAllCaps="false"
                        android:layout_marginTop="12dp"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/ic_refresh"
                        app:iconTint="@color/white"
                        app:iconPadding="12dp"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/redeem600Btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="600 pts → Rs.350 reload"
                        android:textAllCaps="false"
                        android:layout_marginTop="12dp"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/ic_refresh"
                        app:iconTint="@color/white"
                        app:iconPadding="12dp"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/redeem700Btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="700 pts → Rs.400 reload"
                        android:textAllCaps="false"
                        android:layout_marginTop="12dp"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/ic_refresh"
                        app:iconTint="@color/white"
                        app:iconPadding="12dp"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/redeem800Btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="800 pts → Rs.450 reload"
                        android:textAllCaps="false"
                        android:layout_marginTop="12dp"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/ic_refresh"
                        app:iconTint="@color/white"
                        app:iconPadding="12dp"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/redeem900Btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="900 pts → Rs.500 reload"
                        android:textAllCaps="false"
                        android:layout_marginTop="12dp"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/ic_refresh"
                        app:iconTint="@color/white"
                        app:iconPadding="12dp"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button"
                        />

                    <!-- High-tier redemptions -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/redeem1000Btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1000 pts → Rs.700 reload"
                        android:textAllCaps="false"
                        android:layout_marginTop="12dp"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/ic_refresh"
                        app:iconTint="@color/white"
                        app:iconPadding="12dp"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/redeem1500Btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1500 pts → Rs.1100 reload"
                        android:textAllCaps="false"
                        android:layout_marginTop="12dp"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/ic_refresh"
                        app:iconTint="@color/white"
                        app:iconPadding="12dp"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/redeem2000Btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2000 pts → Rs.1500 reload"
                        android:textAllCaps="false"
                        android:layout_marginTop="12dp"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/ic_refresh"
                        app:iconTint="@color/white"
                        app:iconPadding="12dp"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button"
                        />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Removed rewards list for simplified page -->

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout> 